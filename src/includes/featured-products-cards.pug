include ../includes/product-modal

#section-featured-products.featured-products-cards
	.featured-products-cards__header.fade-in
		h2.featured-products-cards__title.text-3xl.mb-0 Choose Your Ride
		p.featured-products-cards__text From Go Board Titan To Skoot And Kaabo Variations
	.product-card
		img(src="images/scooter1.png", alt="scooter").product-card__img
		ul.product-card__links
			each spec in productSpecs1
				+product(spec)
	.product-card
		img(src="images/scooter2.png", alt="scooter").product-card__img
		ul.product-card__links
			each spec in productSpecs2
				+product(spec)
	.product-card
		img(src="images/scooter3.png", alt="scooter").product-card__img
		ul.product-card__links
			each spec in productSpecs3
				+product(spec)