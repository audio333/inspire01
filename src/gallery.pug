extends layouts/app
block content
	include layouts/page-template
	+pageTemplate('Gallery', 'Check Our')
		.gallery.grid.magnific.container(data-masonry='{"itemSelector": ".grid-item", "columnWidth": ".grid-sizer", "percentPosition": true, "gutter": ".gutter-sizer", "horizontalOrder": true}')
			.grid-sizer
			.gutter-sizer
			- for(var i = 1; i < 29; i++)
				a.gallery__img.grid-item.fade-in(href="images/gallery/a" + i + ".jpg", data-lightbox="gallery")
					img(src="images/gallery/a" + i + ".jpg", alt="photo")
					.gallery__img-overlay